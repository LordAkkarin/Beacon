<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<VBox prefWidth="640" prefHeight="320"
  fx:controller="tv.dotstart.beacon.ui.controller.SplashController" xmlns:fx="http://javafx.com/fxml">
  <stylesheets>
    <URL value="@/style/splash.css"/>
  </stylesheets>

  <Pane VBox.vgrow="ALWAYS"/>

  <VBox>
    <HBox>
      <Label fx:id="statusLabel"/>
      <Pane HBox.hgrow="ALWAYS"/>
      <Label fx:id="versionLabel"/>
    </HBox>
    <ProgressBar fx:id="progressBar" maxWidth="Infinity"/>
  </VBox>
</VBox>
